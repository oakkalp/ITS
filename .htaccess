RewriteEngine On

# Flutter API routing
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^api/flutter/auth/(.*)$ api/flutter/auth.php/$1 [QSA,L]

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^api/flutter/dashboard/(.*)$ api/flutter/dashboard.php/$1 [QSA,L]

# DiÄŸer API routing'ler
RewriteCond %{REQUEST_FILENAME} !-f
